<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_block"
    android:background="@drawable/bordure"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_type_exercice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_bicycle" />

        <TextView
            android:id="@+id/titre_type_exercice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom du Type d'Exercice"
            android:textSize="@dimen/title_simple_size"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_simple"
            android:layout_marginTop="@dimen/margin_simple" />

    </LinearLayout>

    <!-- <TextView
        android:id="@+id/comment_type_exercice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texte expliquant le type d'exercice et comment bien le faire et avoir " />-->

</LinearLayout>